{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./**/*.spec.ts", "./dist"]
}
